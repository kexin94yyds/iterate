{
  "manifest_version": 3,
  "name": "iterate",
  "version": "1.0.0",
  "description": "监控 ChatGPT/Gemini 等 AI 完成状态，通知 iterate 应用",
  "permissions": [
    "activeTab",
    "tabs",
    "notifications"
  ],
  "host_permissions": [
    "https://chat.openai.com/*",
    "https://chatgpt.com/*",
    "https://gemini.google.com/*",
    "https://aistudio.google.com/*",
    "https://claude.ai/*",
    "https://poe.com/*",
    "https://notebooklm.google.com/*",
    "https://www.perplexity.ai/*",
    "https://perplexity.ai/*",
    "https://chat.deepseek.com/*",
    "https://grok.x.ai/*",
    "https://x.com/i/grok/*",
    "https://www.genspark.ai/*",
    "https://tongyi.aliyun.com/*",
    "https://www.doubao.com/*",
    "https://ima.qq.com/*",
    "https://kimi.moonshot.cn/*",
    "https://yuanbao.tencent.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://chat.openai.com/*",
        "https://chatgpt.com/*",
        "https://gemini.google.com/*",
        "https://aistudio.google.com/*",
        "https://claude.ai/*",
        "https://poe.com/*",
        "https://notebooklm.google.com/*",
        "https://www.perplexity.ai/*",
        "https://perplexity.ai/*",
        "https://chat.deepseek.com/*",
        "https://grok.x.ai/*",
        "https://x.com/i/grok/*",
        "https://www.genspark.ai/*",
        "https://tongyi.aliyun.com/*",
        "https://www.doubao.com/*",
        "https://ima.qq.com/*",
        "https://kimi.moonshot.cn/*",
        "https://yuanbao.tencent.com/*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
